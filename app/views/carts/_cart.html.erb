<% unless cart.line_items.empty? %>
    <article>

          <% if notice %>
            <aside id="notice"> <%= notice %> 
          <% end %>

          <h4><%= t('.title') %></h4>
          
          <table>
              <%= render(cart.line_items) %>  
              <tfoot>
                <tr>
                  <th colspan="2">Total:</th>   
                  <td class="price"><%= number_to_currency(cart.total_price) %>  </td>
                </tr>
              </tfoot>
          </table>
        
          <div class='actions'>
              <%= button_to t('.empty'), @cart ,method: :delete, data: {confirm: "Arre you sure..."}   %>
              <%= button_to t('.checkout'),   new_order_path, 
                             method: :get,
                             class: 'checkout'%>

          </div>
    </article>
<% end %>